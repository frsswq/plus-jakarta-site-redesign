---
import { Icon } from "astro-icon/components";

const { stickyNavbar = false } = Astro.props;

const navbarButtonStyle =
  "cursor-pointer border not-first:border-l-0 border-zinc-700 bg-zinc-800 px-2 pt-1.75 pb-2.25 hover:border-zinc-700/80 hover:bg-zinc-700";
---

<nav
  class={`${stickyNavbar ? "sticky" : "fixed"} fixed top-0 w-full px-4 py-4 z-10`}
>
  <div
    class="fixed-container flex h-8 flex-row justify-between text-sm text-white"
  >
    <a
      class="flex"
      href="/plus-jakarta-site-redesign/"
      aria-label="Go to home page"
    >
      <Icon
        name="j-logo"
        class={`${navbarButtonStyle} flex h-full w-auto items-stretch p-2`}
        aria-hidden="true"
      />
      <p class={`${navbarButtonStyle} hidden items-center font-bold md:flex`}>
        Plus Jakarta Sans
      </p>
    </a>
    <div class="flex">
      <a
        href="/plus-jakarta-site-redesign/editor"
        class={`${navbarButtonStyle} flex items-center`}>Editor</a
      >
      <a
        href="https://github.com/tokotype/plusjakartasans/releases/latest"
        target="_blank"
        class={`${navbarButtonStyle} hidden items-center md:flex`}
        >Download<span class="relative -top-0.25 text-base">&nbsp;â†“</span></a
      >
    </div>
  </div>
</nav>
